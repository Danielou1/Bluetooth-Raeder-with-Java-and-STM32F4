<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.serial.Controller">
    <children>
        <VBox spacing="10.0" alignment="TOP_LEFT" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <Label text="Serieller Port:" />
            <ComboBox fx:id="portComboBox" promptText="Wähle einen Port" prefWidth="200" />
            
            <Label text="Baudrate:" />
            <ComboBox fx:id="baudRateComboBox" promptText="Wähle Baudrate" prefWidth="200" />

            <HBox spacing="10">
                <Button text="Open Port" onAction="#onOpenPort" />
                <Button text="Close Port" onAction="#onClosePort" />
                <Button text="Refresh Port" onAction="#refreshPorts" />
            </HBox>

            <Label text="Ausgabe:" />
            <TextArea fx:id="outputArea" prefRowCount="15" prefColumnCount="50" wrapText="true" editable="false" />
        </VBox>
    </children>
</AnchorPane>
